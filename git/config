[alias]
	s = status
	b = branch
	s = status --short
	aa = add --all
	st = status
	co = checkout
	cm = commit
	cma = commit --amend
	cmm = commit --message
	rbi = rebase --interactive
	l = log --pretty=format:'%Cred%h %C(cyan)%an%Creset %s %Cgreen%ad%C(yellow)%d' --date=human
	ld = log --pretty=format:'%Cred%h %C(cyan)%an%Creset %s %Cgreen%ad%C(yellow)%d' --date=format:'%d/%m/%Y %H:%M:%S'
	lg = l --graph
	ldg = ld --graph
