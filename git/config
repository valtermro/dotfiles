[core]
	autocrlf = false
	trustctime = false

[push]
	default = simple

[alias]
	s = status
	b = branch
	s = status --short
	aa = add --all
	st = status
	co = checkout
	cm = commit
	cma = commit --amend
	cmaa = commit --amend --reuse-message HEAD
	cmm = commit --message
	tags = tag --list
	rbi = rebase --interactive
	rbc = rebase --continue
	rba = rebase --abort
	sta = stash
	staa = stash apply
	stal = stash list
	stac = stash clear
	unstage = reset HEAD
	lol = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset%C(yellow)%d%Creset%Cgreen(%cr)%Creset' --abbrev-commit --date=relative
